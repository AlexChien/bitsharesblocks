// see http://eslint.org/docs/rules/
{
  "parser": "babel-eslint",
  "plugins": [
    "react"
  ],
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "globals": {
    "__DEV__": true,
    "__SERVER__": true
  },
  "ecmaFeatures": {
    "jsx": true
  },
  "rules": {
    // Strict mode
    "strict": [2, "never"],

    // Code style
    "quotes": [2, "single", "avoid-escape"],
    "indent": [4, 2],
    "camelcase": [0],
    "new-cap": [0],
    "no-underscore-dangle": [0]
  }
}
